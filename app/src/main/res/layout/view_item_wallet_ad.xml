<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_icon_ad"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@mipmap/ic_launcher"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_ad_context"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:maxLines="2"
        android:lineSpacingMultiplier="0.8"
        app:layout_constraintStart_toEndOf="@id/iv_icon_ad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text = "2019 中臺灣元宵燈會-福滿迎豬。燈會限定，網美必拍！"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_ad_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:textSize="12sp"
        android:textColor="@color/blue_2FC1CF"
        app:layout_constraintStart_toEndOf="@id/iv_icon_ad"
        app:layout_constraintTop_toBottomOf="@id/tv_ad_context"
        tools:text="台中市政府"
        />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:text="@string/ad"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_ad_unit"
        app:layout_constraintBottom_toBottomOf="@id/tv_ad_unit"
        />
</androidx.constraintlayout.widget.ConstraintLayout>